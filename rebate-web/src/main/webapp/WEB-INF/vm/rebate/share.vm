#set( $title = "分享")
#parse("/common/head.vm")
<body class="bd">
<!--.header-->
<div class="header mui-flex align-center">
    <div class="back cell fixed">
        <a href="javascript:;"><img src="/static/img/ico-arrow-left-01.png" alt=""></a>
    </div>
    <div class="title cell">分享赚钱</div>
</div>
<!--/.header-->
<div class="share-money-page">
    <div class="tip-rules">
        分享给朋友购买，预计可赚<span class="ftx-red">38元</span>。
        <a href="#">规则&gt;</a>
    </div>
    <div class="share-item">
        <div class="sec-01">
            <span class="radio radio-single chk"></span>分享二维码
        </div>
        <div class="cnt">
            <div class="share-good-info">
                <img src="/static/img/img-02.jpg" alt="">
            </div>
            <div class="recomm-words">
                <div class="tl">推荐语（<span>用于微信朋友圈、群引导</span>）</div>
                <div class="ipt-box">
                    <input class="ipt" placeholder="走了个特殊通道，直降100元…" type="text">
                </div>
            </div>
        </div>
    </div>
    <div class="share-item">
        <div class="sec-01">
            <span class="radio radio-single"></span>推荐语+链接
        </div>
        <div class="cnt">
            <div class="recomm-edit">
                <div class="tl">您可以编辑发送朋友的推广内容</div>
                <div class="info">
                    <div class="sec mui-flex align-center">
                        <div class="cell fixed">【京东超市】</div>
                        <div class="cell">
                            <input value="智利进口红酒" type="text">
                        </div>
                    </div>
                    <div class="sec mui-flex align-center">
                        <div class="cell fixed">
                            【原价】
                        </div>
                        <div class="cell">
                            <input value="188元" type="text">
                        </div>
                    </div>
                    <div class="sec mui-flex align-center">
                        <div class="cell fixed">
                            【我推荐给你后】
                        </div>
                        <div class="cell">
                            <input value="专享价：98元" type="text">
                        </div>
                    </div>
                    <div class="sec mui-flex align-center">
                        <div class="cell fixed">
                            【购买链接】
                        </div>
                        <div class="cell">
                            <input style="color:#898989;" value="{推广链接}（此处不要修改，否则无法返钱）" type="text">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="share-way-wrap">
        <div class="inner">
            <h4 class="tl">分享到</h4>
            <div class="share-way mui-flex align-center">
                <a href="javascript:;" class="cell">
                    <img src="/static/img/ico-wechat-01.png" alt="">
                    <p>微信好友</p>
                </a>
                <a href="javascript:;" class="cell">
                    <img src="/static/img/ico-pyq-01.png" alt="">
                    <p>朋友圈</p>
                </a>
                <a href="javascript:;" class="cell">
                    <img src="/static/img/ico-qq-01.png" alt="">
                    <p>QQ</p>
                </a>
                <a href="javascript:;" class="cell">
                    <img src="/static/img/ico-02.png" alt="">
                    <p>复制链接</p>
                </a>
            </div>
        </div>
    </div>
</div>

</body></html>